<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet> 
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>InserirEmpresa</servlet-name>
        <servlet-class>com.silvio.operacoes.InserirEmpresa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InserirCandidato</servlet-name>
        <servlet-class>com.silvio.operacoes.InserirCandidato</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InserirAcesso</servlet-name>
        <servlet-class>com.silvio.operacoes.InserirAcesso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InserirVaga</servlet-name>
        <servlet-class>com.silvio.operacoes.InserirVaga</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarVaga</servlet-name>
        <servlet-class>com.silvio.operacoes.ConsultarVaga</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarEmpresa</servlet-name>
        <servlet-class>com.silvio.operacoes.ConsultarEmpresa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarCandidato</servlet-name>
        <servlet-class>com.silvio.operacoes.ConsultarCandidato</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InserirEmpresa</servlet-name>
        <url-pattern>/InserirEmpresa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InserirCandidato</servlet-name>
        <url-pattern>/InserirCandidato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InserirAcesso</servlet-name>
        <url-pattern>/InserirAcesso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InserirVaga</servlet-name>
        <url-pattern>/InserirVaga</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarVaga</servlet-name>
        <url-pattern>/ConsultarVaga</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarEmpresa</servlet-name>
        <url-pattern>/ConsultarEmpresa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarCandidato</servlet-name>
        <url-pattern>/ConsultarCandidato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsf</welcome-file>
    </welcome-file-list>
</web-app>
