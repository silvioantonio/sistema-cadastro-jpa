<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>OperacoesEmpresa</servlet-name>
        <servlet-class>com.silvio.operacoes.OperacoesEmpresa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperacoesCandidato</servlet-name>
        <servlet-class>com.silvio.operacoes.OperacoesCandidato</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperacoesAcesso</servlet-name>
        <servlet-class>com.silvio.operacoes.OperacoesAcesso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperacoesVaga</servlet-name>
        <servlet-class>com.silvio.operacoes.OperacoesVaga</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarVaga</servlet-name>
        <servlet-class>com.silvio.operacoes.ConsultarVaga</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarEmpresa</servlet-name>
        <servlet-class>com.silvio.operacoes.ConsultarEmpresa</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultarCandidato</servlet-name>
        <servlet-class>com.silvio.operacoes.ConsultarCandidato</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperacoesExperienciaProfissional</servlet-name>
        <servlet-class>com.silvio.operacoes.OperacoesExperienciaProfissional</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OperacoesEmpresa</servlet-name>
        <url-pattern>/OperacoesEmpresa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperacoesCandidato</servlet-name>
        <url-pattern>/OperacoesCandidato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperacoesAcesso</servlet-name>
        <url-pattern>/OperacoesAcesso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperacoesVaga</servlet-name>
        <url-pattern>/OperacoesVaga</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarVaga</servlet-name>
        <url-pattern>/ConsultarVaga</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarEmpresa</servlet-name>
        <url-pattern>/ConsultarEmpresa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultarCandidato</servlet-name>
        <url-pattern>/ConsultarCandidato</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperacoesExperienciaProfissional</servlet-name>
        <url-pattern>/OperacoesExperienciaProfissional</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsf</welcome-file>
    </welcome-file-list>
</web-app>
